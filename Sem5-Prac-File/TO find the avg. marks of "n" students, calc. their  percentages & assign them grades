import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		int StudentNo; 
    int sum = 0;
    int marks=0;
    float avg;
    Scanner scn = new Scanner(System.in);
    System.out.println("Enter the no of students");
    StudentNo = scn.nextInt();

    for (int i =0; i<(StudentNo+1); i++){
      System.out.println("For student "+i);
      System.out.println("Enter the marks of 5 subjects:");
      for(int j=1; j<=5; j++){
      System.out.println("Enter the marks of subject "+j);
      marks = scn.nextInt();
      sum+=marks;

      }
      

      avg = sum/5;
      
      System.out.println("The avg for student "+i+" is "+ avg);
      System.out.println("The percentage for student "+i+" is "+ avg+ " % ");

      if (avg>=90)
       System.out.println("You scored grade A");
      else if ( avg<90&&avg>=70 )
       System.out.println("You scored grade B");
      else
       System.out.println("You scored grade C");
    }
	}

}
